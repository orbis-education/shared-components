{
  "name": "shared-components",
  "version": "2.0.5",
  "description": "Contains common components that are available for use by all applications developed.",
  "author": "Orbis Education",
  "copyrightYear": "2026",
  "repository": {
    "type": "git",
    "url": "https://github.com/orbis-education/shared-components"
  },
  "type": "module",
  "private": true,
  "main": "dist/shared-components.umd.cjs",
  "module": "dist/shared-components.js",
  "exports": {
    ".": {
      "import": "./dist/shared-components.js",
      "require": "./dist/shared-components.umd.cjs"
    },
    "./shared-components.css": "./dist/shared-components.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --open",
    "start": "vite --open",
    "build": "vite build",
    "preview": "vite preview",
    "prebuild": "rimraf dist",
    "prepare": "husky",
    "lint": "eslint --max-warnings=0 lib src",
    "lint:fix": "eslint --max-warnings=0 lib src --fix",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,css,md}\"",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "shared-functions": "github:orbis-education/shared-functions"
  },
  "devDependencies": {
    "@types/node": "^25.1.0",
    "@types/react": "^19.2.10",
    "@eslint/js": "^9.39.2",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "autoprefixer": "^10.4.23",
    "classnames": "^2.5.1",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.5.0",
    "globals": "^17.3.0",
    "prettier": "^3.4.2",
    "husky": "^9.1.7",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "postcss-nested": "^7.0.2",
    "postcss-preset-env": "^11.1.2",
    "rimraf": "^6.1.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "vite": "^7.3.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-eslint": "^1.8.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
